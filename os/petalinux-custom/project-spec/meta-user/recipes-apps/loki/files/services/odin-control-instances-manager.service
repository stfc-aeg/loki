[Unit]
SourcePath=/opt/loki-service-scripts/odin-control-instances-manager.sh
Before=graphical.target
After=network-online.target
Wants=network-online.target
After=loki-config.service       
Wants=loki-config.service       
WantedBy=multi-user.target

[Service]
Type=forking
Restart=no
TimeoutSec=5min
IgnoreSIGPIPE=no
KillMode=process
GuessMainPID=no
RemainAfterExit=yes
ExecStart=/opt/loki-service-scripts/odin-control-instances-manager.sh start
ExecStop=/opt/loki-service-scripts/odin-control-intances-manaher.sh stop
